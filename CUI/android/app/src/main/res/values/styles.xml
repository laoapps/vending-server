<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- No Action Bar Theme with Full-Screen -->
  <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>  <!-- ✅ Makes Full-Screen -->
    <item name="android:windowDrawsSystemBarBackgrounds">false</item>  <!-- ✅ Removes Status Bar Background -->
    <item name="android:statusBarColor">@android:color/transparent</item>  <!-- ✅ Transparent Status Bar -->
    <item name="android:background">@null</item>
  </style>

  <!-- Full-Screen Theme for Splash Screen -->
  <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
    <item name="android:windowFullscreen">true</item>  <!-- ✅ Full-Screen for Splash -->
    <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:background">@drawable/splash</item>
  </style>

</resources>
